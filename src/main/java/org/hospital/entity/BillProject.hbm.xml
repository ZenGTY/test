<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.hospital.entity.BillProject" table="billproject" schema="" catalog="hospitalsystem">
        <composite-id mapped="true" class="org.hospital.entity.BillProjectPK">
            <key-property name="billId">
                <column name="billId" sql-type="bigint unsigned" not-null="true"/>
            </key-property>
            <key-property name="projectId">
                <column name="projectId" sql-type="bigint unsigned" not-null="true"/>
            </key-property>
        </composite-id>
        
        <property name="number">
            <column name="number" sql-type="smallint unsigned" not-null="true"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double unsigned" precision="22" not-null="true"/>
        </property>
        <property name="deadline">
            <column name="deadline" sql-type="datetime"/>
        </property>
        <property name="extraInfo">
            <column name="extraInfo" sql-type="varchar"/>
        </property>
    </class>
</hibernate-mapping>