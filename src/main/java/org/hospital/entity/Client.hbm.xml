<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.hospital.entity.Client" table="client" schema="" catalog="hospitalsystem">
        <id name="clientId">
            <column name="clientId" sql-type="bigint unsigned" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="identity">
            <column name="identity" sql-type="varchar" length="18"/>
        </property>
        <property name="age">
            <column name="age" sql-type="smallint unsigned"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="smallint unsigned"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar" length="20"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar"/>
        </property>
        <property name="birthdate">
            <column name="birthdate" sql-type="datetime"/>
        </property>
        <property name="birthplace">
            <column name="birthplace" sql-type="varchar"/>
        </property>
        <property name="nation">
            <column name="nation" sql-type="varchar" length="50"/>
        </property>
        <property name="marriage">
            <column name="marriage" sql-type="smallint unsigned"/>
        </property>
        <property name="occupation">
            <column name="occupation" sql-type="varchar" length="50"/>
        </property>
        <property name="company">
            <column name="company" sql-type="varchar"/>
        </property>
        <property name="registerTime">
            <column name="registerTime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="smallint" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>