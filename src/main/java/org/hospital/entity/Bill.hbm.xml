<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.hospital.entity.Bill" table="bill" schema="" catalog="hospitalsystem">
        <id name="billId">
            <column name="billId" sql-type="bigint unsigned" not-null="true"/>
        </id>
        <property name="clintId">
            <column name="clintId" sql-type="bigint unsigned" not-null="true"/>
        </property>
        <property name="employeeId">
            <column name="employeeId" sql-type="bigint unsigned" not-null="true"/>
        </property>
        <property name="departmentId">
            <column name="departmentId" sql-type="int unsigned" not-null="true"/>
        </property>
        <property name="clinicId">
            <column name="clinicId" sql-type="int unsigned" not-null="true"/>
        </property>
        <property name="category">
            <column name="category" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="totalCost">
            <column name="totalCost" sql-type="double unsigned" precision="22" not-null="true"/>
        </property>
        <property name="totalPrice">
            <column name="totalPrice" sql-type="double unsigned" precision="22" not-null="true"/>
        </property>
        <property name="datetime">
            <column name="datetime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="smallint" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>