<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.hospital.entity.Employee" table="employee" schema="" catalog="hospitalsystem">
        <id name="employeeId">
            <column name="employeeId" sql-type="bigint unsigned" not-null="true"/>
        </id>
        <property name="positionId">
            <column name="positionId" sql-type="int unsigned" not-null="true"/>
        </property>
        <property name="departmentId">
            <column name="departmentId" sql-type="int unsigned"/>
        </property>
        <property name="clinicId">
            <column name="clinicId" sql-type="int unsigned"/>
        </property>
        <property name="account">
            <column name="account" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar" length="50"/>
        </property>
        <property name="identity">
            <column name="identity" sql-type="varchar" length="18"/>
        </property>
        <property name="age">
            <column name="age" sql-type="smallint unsigned"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="smallint unsigned"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar" length="20"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar"/>
        </property>
        <property name="birthdate">
            <column name="birthdate" sql-type="date"/>
        </property>
        <property name="birthplace">
            <column name="birthplace" sql-type="varchar"/>
        </property>
        <property name="nation">
            <column name="nation" sql-type="varchar" length="50"/>
        </property>
        <property name="marriage">
            <column name="marriage" sql-type="smallint unsigned"/>
        </property>
        <property name="billCost">
            <column name="billCost" sql-type="double" precision="22"/>
        </property>
        <property name="registerTime">
            <column name="registerTime" sql-type="datetime"/>
        </property>
        <property name="loginTime">
            <column name="loginTime" sql-type="datetime"/>
        </property>
        <property name="status">
            <column name="status" sql-type="smallint"/>
        </property>
        <property name="isOnJob">
            <column name="isOnJob" sql-type="smallint unsigned"/>
        </property>
    </class>
</hibernate-mapping>