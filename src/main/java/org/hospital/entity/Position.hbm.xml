<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.hospital.entity.Position" table="position" schema="" catalog="hospitalsystem">
        <id name="positionId">
            <column name="positionId" sql-type="int unsigned" not-null="true"/>
        </id>
        <property name="creatorId">
            <column name="creatorId" sql-type="bigint unsigned" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar"/>
        </property>
        <property name="rank">
            <column name="rank" sql-type="smallint unsigned" not-null="true"/>
        </property>
        <property name="createTime">
            <column name="createTime" sql-type="datetime" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>