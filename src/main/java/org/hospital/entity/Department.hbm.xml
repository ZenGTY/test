<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.hospital.entity.Department" table="department" schema="" catalog="hospitalsystem">
        <id name="departmentId">
            <column name="departmentId" sql-type="int unsigned" not-null="true"/>
        </id>
        <property name="clinicId">
            <column name="clinicId" sql-type="int unsigned" not-null="true"/>
        </property>
        <property name="employeeId">
            <column name="employeeId" sql-type="bigint unsigned" not-null="true"/>
        </property>
        <property name="creatorId">
            <column name="creatorId" sql-type="bigint unsigned" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar" length="50" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar" length="20"/>
        </property>
        <property name="createTime">
            <column name="createTime" sql-type="datetime" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>